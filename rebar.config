{plugins, [pc]}.
{provider_hooks, [
    {pre, [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
    ]}
]}.

{port_specs, [{"priv/erl_xslt.so", ["c_src/*.c"]}]}.

{port_env, [
    {".*", "CFLAGS", "$CFLAGS -O3 `pkg-config --cflags libxslt`"},
    {".*", "LDFLAGS", "$LDFLAGS `pkg-config --libs libxslt`"}
]}.
